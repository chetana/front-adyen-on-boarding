{
  "name": "djust-pay-onboarding",
  "version": "1.0.0",
  "description": "Interface Vue.js pour l'automatisation de l'onboarding Adyen",
  "main": "server.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port $PORT --host 0.0.0.0",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "start": "NODE_ENV=production node server.js",
    "dev:full": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "security-check": "./check-security.sh",
    "precommit": "npm run security-check"
  },
  "dependencies": {
    "vue": "^3.3.4",
    "axios": "^1.5.0",
    "@vueuse/core": "^10.4.1",
    "vue-toastification": "^2.0.0-rc.5",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "vite": "^4.4.9",
    "typescript": "^5.2.2",
    "vue-tsc": "^1.8.8",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "type": "module"
}